<form class="{{cssClass}} actor-sheet faction-sheet" autocomplete="off">


  <section id="faction-sheet" class="flex-vertical">
    <table class="name-and-image">
      <tr>
        <td id="name" class="large-name">
            <input type="text" id="faction-{{actor._id}}-name" name="name" value="{{actor.name}}">
        </td>
        <td>
          <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
        </td>
      </tr>
    </table>

    <div class="tier-side flex-horizontal">
      <div class="text-input flex-horizontal" id="number">
        <label class="rollable-text roll-die-attribute" data-roll-attribute="tier" data-roll-value="{{actor.system.tier.value}}" data-roll-type="fortune">{{localize "FITD.Tier"}}</label>
        <input type="number" id="faction-{{actor._id}}-tier" name="system.tier.value" value="{{system.tier.value}}" min="0" max="4">
      </div>
      <div class="text-input flex-horizontal">
        <label for="faction-{{actor._id}}-side">{{localize "FITD.Side"}}</label>
        <select class="" id="faction-{{actor._id}}-side" name="system.category">
          {{#select system.category}}
          <option value="dark">{{localize "FITD.FACTION_SIDE.Dark"}}</option>
          <option value="neutral">{{localize "FITD.FACTION_SIDE.Neutral"}}</option>
          <option value="light">{{localize "FITD.FACTION_SIDE.Light"}}</option>
          {{/select}}
        </select>
      </div>
    </div>

    {{!-- Clocks Table --}}
    <div class="label-stripe flex-horizontal">
      <p>{{localize "FITD.Clocks"}}</p>
    </div>
    <table id="faction-clocks">
      <tbody>
        <tr>
          <td>
            {{!-- Display Clock 1 here --}}
            <div class="faction-clock-display seg-{{system.clock1.max}}" id="faction-{{actor._id}}-clock-1-display">
              {{#if (eq system.clock_active_1 true)}}
              {{{blades-clock "system.clock1.value" system.clock1.max system.clock1.value system.clock_uid_1}}}
              {{/if}}
            </div>
          </td>
          <td>
            {{!-- Display Clock 2 here --}}
            <div class="faction-clock-display seg-{{system.clock2.max}}" id="faction-{{actor._id}}-clock-2-display">
              {{#if (eq system.clock_active_2 true)}}
              {{{blades-clock "system.clock2.value" system.clock2.max system.clock2.value system.clock_uid_2}}}
              {{/if}}
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="faction-clock-text" id="faction-{{actor._id}}-clock-1-text">
              {{#if (eq system.clock_active_1 true)}}
              <label>{{localize "FITD.Project"}} 1</label>
              <textarea rows="2" name="system.clock1.text">{{system.clock1.text}}</textarea>
              {{/if}}
            </div>
          </td>
          <td>
            <div class="faction-clock-text" id="faction-{{actor._id}}-clock-2-text">
              {{#if (eq system.clock_active_2 true)}}
              <label>{{localize "FITD.Project"}} 2</label>
              <textarea rows="2" name="system.clock2.text">{{system.clock2.text}}</textarea>
              {{/if}}
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <select class="clock-configuration" id="faction-{{actor._id}}-clock-1-select" name="system.clock1.max">
              {{#select system.clock1.max}}
              <option value="0">{{localize "FITD.Off"}}</option>
              <option value="4">4 {{localize "FITD.Segements"}}</option>
              <option value="6">6 {{localize "FITD.Segements"}}</option>
              <option value="8">8 {{localize "FITD.Segements"}}</option>
              {{/select}}
            </select>
          </td>
          <td>
            <select class="clock-configuration" id="faction-{{actor._id}}-clock-2-select" name="system.clock2.max">
              {{#select system.clock2.max}}
              <option value="0">{{localize "FITD.Off"}}</option>
              <option value="4">4 {{localize "FITD.Segements"}}</option>
              <option value="6">6 {{localize "FITD.Segements"}}</option>
              <option value="8">8 {{localize "FITD.Segements"}}</option>
              {{/select}}
            </select>
          </td>
        </tr>
      </tbody>
    </table>

    {{!-- Notes --}}
    <div id="faction-{{actor._id}}-notes" class="flex-vertical">
      <div class="label-stripe">
        <p>{{localize "FITD.Notes"}}</p>
      </div>
      {{editor notes target="system.description" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
