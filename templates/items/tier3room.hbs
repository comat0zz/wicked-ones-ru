<form class="{{cssClass}} item-sheet tier-3-room-sheet" autocomplete="off">
  <header class="sheet-header">
      <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
      <div class="header-fields">
          <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'FITD.Name'}}"/></h1>
      </div>
  </header>

  <section class="flex-vertical">
    <label class="label-stripe">{{localize "FITD.Description"}}</label>
    <textarea name="system.description">{{system.description}}</textarea>
    <label class="label-stripe">{{localize "FITD.RoomRequirements"}}</label>
    <textarea name="system.requirements">{{system.requirements}}</textarea>
    <label class="label-stripe">{{localize "FITD.DungeonTheme"}}</label>
    <input type="text" name="system.theme" value="{{system.theme}}">
    <label class="label-stripe">{{localize "FITD.MissingMaterials"}}</label>
    <div>
      <input type="checkbox" name="system.missing_materials" {{checked system.missing_materials}}>
      <label>{{localize "FITD.MissingMaterialsHint"}}</label>
    </div>
    <div class="flex-vertical">
      <label class="label-stripe">{{localize "FITD.Checkbox"}} 1</label>
      <input id="room-chbx-1" type="text" name="system.room_checkbox_1_text" value="{{system.room_checkbox_1_text}}" placeholder="{{localize 'FITD.CheckboxExample'}}">
      <label class="label-stripe">{{localize "FITD.Checkbox"}} 2</label>
      <input id="room-chbx-2" type="text" name="system.room_checkbox_2_text" value="{{system.room_checkbox_2_text}}" placeholder="{{localize 'FITD.CheckboxExample'}}">
    </div>
  </section>

</form>
